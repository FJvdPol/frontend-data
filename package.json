{
  "name": "frontend-data",
  "version": "0.0.1",
  "description": "School project of an interactive data visualization of the OBA api",
  "main": "server/index.js",
  "dependencies": {
    "axios": "^0.18.0",
    "cors": "^2.8.5",
    "dotenv": "^6.1.0",
    "express": "^4.16.4",
    "http-server": "^0.11.1",
    "xml-to-json-promise": "0.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.1.6",
    "@babel/preset-env": "^7.1.6",
    "babelify": "^10.0.0",
    "browserify": "^16.2.3",
    "nodemon": "^1.18.6",
    "npm-watch": "^0.4.0",
    "prettier": "^1.15.2",
    "xo": "^0.23.0"
  },
  "watch": {
    "build:js": "src/**/*.js"
  },
  "scripts": {
    "format": "prettier --write \"./src/**/*.js\"",
    "data": "node_modules/.bin/nodemon server/index.js",
    "xo": "xo",
    "build:js": "browserify -d src -o static/bundle.js -t [ babelify --presets [ @babel/preset-env ] ]",
    "build": "npm run format && npm run build:js",
    "watch": "npm-watch"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "useTabs": true,
    "tabWidth": 2,
    "trailingComma": "none"
  },
  "xo": {
    "extends": [
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error",
      "unicorn/catch-error-name": [
        "error",
        {
          "name": "err"
        }
      ],
      "linebreak-style": 0
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FJvdPol/frontend-data.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/FJvdPol/frontend-data/issues"
  },
  "homepage": "https://github.com/FJvdPol/frontend-data#readme"
}
